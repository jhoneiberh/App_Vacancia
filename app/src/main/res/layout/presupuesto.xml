<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/king_blue"
    tools:context=".Presupuesto">

    <ImageButton
        android:id="@+id/imgBtnBefore"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/before"/>


    <TextView
        android:id="@+id/txtPresupuestoPregunta"
        android:layout_width="211dp"
        android:lineHeight="25dp"
        android:layout_height="67dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="CuÃ¡l es tu prespuesto para estas vacaciones?"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnBefore" />

    <ImageView
        android:id="@+id/imgPresupuestoIconPeso"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/icon_peso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPresupuestoPregunta" />

    <View
        android:id="@+id/lineMoney"
        android:layout_width="2dp"
        android:layout_height="55dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imgPresupuestoIconPeso"
        app:layout_constraintTop_toBottomOf="@+id/txtPresupuestoPregunta" />

    <EditText
        android:id="@+id/editPresupuestoDinero"
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_blue"
        android:fontFamily="@font/montserrat_medium"
        android:hint="250.000"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFF"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lineMoney"
        app:layout_constraintTop_toBottomOf="@+id/txtPresupuestoPregunta" />

    <ImageButton
        android:id="@+id/imgBtnPresupuestoNext"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPresupuestoDinero"
        android:background="@mipmap/next"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>