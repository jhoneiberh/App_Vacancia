<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/king_blue">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/before_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/nameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_alternates_semibold"
        android:text="Acerca de"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />


    <ImageView
        android:id="@+id/logo"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:background="@mipmap/logo"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameApp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="61dp"
        android:text="@string/vacancia"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/nameApp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Versión 1.0.1"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright 2022 Todos los derechos reservados"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageButton
        android:id="@+id/imgBtnFacebook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/imgBtnYoutube"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:src="@mipmap/youtube"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnTwitter"
        app:layout_constraintStart_toEndOf="@+id/imgBtnFacebook"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
        android:id="@+id/imgBtnTwitter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:src="@mipmap/twitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Vacancia la aplicación que resuelve tus problemas"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnYoutube" />

    <TextView
        android:id="@+id/showAboutDesarrollador"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_light"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center_vertical"
        android:textAlignment="viewStart"
        android:textColor="@color/king_blue"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/showNameDev2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center_vertical"
        android:text="Desarrollada por:"
        android:textAlignment="center"
        android:textColor="@color/king_blue"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/showAboutDesarrollador"
        app:layout_constraintEnd_toStartOf="@+id/showNameDev"
        app:layout_constraintStart_toStartOf="@+id/showAboutDesarrollador"
        app:layout_constraintTop_toTopOf="@+id/showAboutDesarrollador" />

    <TextView
        android:id="@+id/showNameDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:gravity="center_vertical"
        android:text="Jhoneiberh"
        android:textAlignment="textStart"
        android:textColor="@color/blue_dark_text"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/showAboutDesarrollador"
        app:layout_constraintEnd_toEndOf="@+id/showAboutDesarrollador"
        app:layout_constraintStart_toEndOf="@id/showNameDev2"
        app:layout_constraintTop_toTopOf="@+id/showAboutDesarrollador" />

</androidx.constraintlayout.widget.ConstraintLayout>