<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/king_blue"
    tools:context=".Lugares">

    <ImageButton
        android:id="@+id/imgBtnLugaresBefore"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@mipmap/before"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/showLugaresNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="nombre lugar"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnLugaresBefore" />

    <TextView
        android:id="@+id/txtLugaresPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:hint="precio"
        android:backgroundTint="@color/white"
        android:textColor="@color/blue_dark_text"
        android:textColorHint="@color/blue_dark_text"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showLugaresNombre" />


    <TextView
        android:id="@+id/txtLugaresNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:text="Ingresa el Nombre del Lugar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLugaresPrecio" />


    <EditText
        android:id="@+id/editLugaresNombre"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_blue"
        android:ems="10"
        android:hint="nombre del lugar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLugaresNameInput" />


    <Button
        android:id="@+id/btnLugaresBuscar"
        android:layout_width="175dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_light"
        android:text="Mostrar"
        android:textColor="#0F2B46"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLugaresNombre" />


</androidx.constraintlayout.widget.ConstraintLayout>